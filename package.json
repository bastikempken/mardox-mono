{
    "name": "root",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build --stream --scope=@mardox/{core,cli}",
        "build:core": "lerna run build --scope=@mardox/core",
        "build:cli": "lerna run build --scope=@mardox/cli",
        "test": "lerna exec -- npm run test",
        "test:core": "lerna exec --scope=@mardox/core -- npm run test",
        "test:cli": "lerna exec --scope=@mardox/cli -- npm run test",
        "prettier": "prettier --write 'packages/*/src/**/*.ts'"
    },
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "@types/node": "^13.11.1",
        "jest": "^25.3.0",
        "lerna": "^3.20.2",
        "prettier": "^2.0.4",
        "ts-jest": "^25.3.1",
        "typescript": "^3.8.3"
    }
}
